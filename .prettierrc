{
    "tabWidth": 4,
    "overrides": [
        {
            "files":["*.ts"],
    "options":{
        "printWidth": 120,
        "parser": "typescript",
        "quoteProps": "consistent",
        "singleQuote": false,
        "useTabs": false,
        "tabWidth": 4,
        "semi": true,
        "trailingComma": "all"
        }},
    {
        "files": [
            "*.html"
        ],
        "options": {
            "parser": "angular",
            "printWidth": 150,
            "htmlWhitespaceSensitivity": "strict"
        }
    },
    {
        "files": [
            "*.yml"
        ],
        "options": {
            "tabwidth": 2
        }
    }
]
}